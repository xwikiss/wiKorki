@model MyAccountParentVM;

@{
    ViewData["Title"] = "Ustawienia konta";
}
<section class="p-4 mb-2">
    <div class="container bg-secondary text-light">
        <h2 class="text-center py-4 m-0">Moje konto <i class="bi bi-person-circle"></i></h2>
        <div class="row my-2">
            <div class="col-8 offset-2 mb-5 ">

                @if (TempData["ChangedCredentials"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["ChangedCredentials"]</div>
                }

                <a asp-controller="Account" asp-action="ChangeCredentials" class=" btn btn-lg btn-block btn-dark mb-2">Zmień dane <i class="bi bi-pen"></i></a>
                <a asp-controller="Account" asp-action="ChangePassword" class=" btn btn-lg btn-block btn-dark mb-2">Zmień hasło <i class="bi bi-lock-fill"></i></a>
                <a asp-controller="Account" asp-action="Delete" class="btn btn-block btn-lg btn-dark ">Usuń konto <i class="bi bi-box-arrow-in-right"></i></a>
            </div>
        </div>
    </div>
</section>

<script>
    window.addEventListener('resize', function () {
        console.log('Resize event triggered');
        var screenWidth = window.innerWidth;

        if (screenWidth <= 600) {

            var buttons = document.querySelectorAll('.btn-to-resize');
            buttons.forEach(function (button) {

                button.classList.add('btn-sm');
            });
        } else {

            var buttons = document.querySelectorAll('.btn-to-resize');
            buttons.forEach(function (button) {
                button.classList.remove('btn-sm');

            });
        }
    });

    window.addEventListener('load', function () {

        window.dispatchEvent(new Event('resize'));
    });
</script>
