@model ChangePasswordVM

    <section class="p-4 mb-2">
        <div class="container bg-secondary text-light">
            <h2 class="text-center py-4 m-0">moje konto <i class="bi bi-person-circle"></i></h2>
            <div class="row my-2">
                <div class="col-8 offset-2 ">
                    <form method="post" asp-action="ChangePassword" asp-controller="Account">
                       
                        @if (TempData["ChangedPassword"] != null)
                        {
                            <div class="alert alert-success">@TempData["ChangedPassword"]</div>
                        }
                        <div id="change-password-form">
                            <div class="form-group">
                                <label class="control-label" asp-for="CurrentPassword"></label>
                                <input asp-for="CurrentPassword" class="form-control text-light border border-light bg-dark btn-outline-dark"  />
                                <span class="text-danger" >
                                    @if (TempData["WrongPassword"] != null)
                                    {
                                        @TempData["WrongPassword"]
                                    }
                                </span>
                            </div>

                            <div class="form-group">
                                <label class="control-label" asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" class="form-control text-light border border-light bg-dark btn-outline-dark" />
                                <span class="text-danger" asp-validation-for="NewPassword"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label" asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control text-light border border-light bg-dark btn-outline-dark"  />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <div class="form-group my-3">
                                <input class="btn btn-outline-success float-right" type="submit" value="Zapisz zmiany" />
                                <a class="btn btn-outline-danger" asp-controller="Account" asp-action="MyAccount">Anuluj</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
 