<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>wiKorki -  @ViewData["Title"] </title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        .dropdown-toggle::after {
            display: none;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-lg bg-light navbar-light  py-2 fixed-top border-bottom-secondary mb-5">
            <div class="container">
                <a class="navbar-brand hover" asp-controller="Home" asp-action="Index"><h4>wi<span class="text-brand">Korki</span></h4></a>

                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navmenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse  navbar-collapse justify-content-end" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               id="navbarDropdown"
                               role="button"
                               data-toggle="dropdown"
                               aria-expanded="false"
                               asp-controller="HSClasses"
                               asp-action="Details"
                               asp-route-id="1">
                                <h5>Klasa 1</h5>
                            </a>
                            @await Component.InvokeAsync("DropdownList", new { id = 1 })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               id="navbarDropdown"
                               role="button"
                               data-toggle="dropdown"
                               aria-haspopop="true"
                               aria-expanded="false"
                               asp-controller="HSClasses"
                               asp-action="Details"
                               asp-route-id="2">
                                <h5>Klasa 2</h5>
                            </a>
                            @await Component.InvokeAsync("DropdownList", new { id = 2 })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               id="navbarDropdown"
                               role="button"
                               data-toggle="dropdown"
                               asp-controller="HSClasses"
                               asp-action="Details"
                               asp-route-id="3"><h5>Klasa 3</h5></a>
                            @await Component.InvokeAsync("DropdownList", new { id = 3 })
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" id="aboutMeLink" asp-controller="Home" asp-action="RenderAboutMeView"><h5>O mnie</h5></a>
                        </li>
                        <partial name="_Identity.cshtml" />

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid justify-content-center mt-5">
        <main role="main" class="p-3">
            <nav aria-label="breadcrumb">
                <partial name="_Breadcrumb" for="@ViewData["BreadcrumbNodes"]" />
            </nav>
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light  mt-auto fixed-bottom border-top-secondary">
        <div class="container text-center ">
            <p class=" m-2 lead">Copyright &copy <span id="currentYear"></span> wiKorki</p>
        </div>
    </footer>

    <script>
        function scrollTo() {
            var target = $('#AboutMe');
            $('html,body').animate({
                scrollTop: target.offset().top
            }, 1000);
        }

        var currentYear = new Date().getFullYear();
        document.getElementById('currentYear').innerText = currentYear;
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
