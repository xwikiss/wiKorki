<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaturaToBzdura</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    

    <link rel="stylesheet" href="~/css/styles.css" />
    <style>

        .dropdown-toggle::after {
            display: none;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-light navbar-light  py-2 fixed-top border-bottom-secondary mb-5">
            <div class="container">
                <a class="navbar-brand hover" asp-controller="Home" asp-action="Index"><h4>wi<span class="text-brand">korki</span></h4></a>

                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navmenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse  navbar-collapse justify-content-end" id="navmenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopop="true" aria-expanded="false"><h5>klasa 1</h5></a>
                            @await Component.InvokeAsync("DropdownList", new { id = 1 })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopop="true" aria-expanded="false"><h5>klasa 2</h5></a>
                            @await Component.InvokeAsync("DropdownList", new { id = 2 })
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopop="true" aria-expanded="false"><h5>klasa 3</h5></a>
                            @await Component.InvokeAsync("DropdownList", new { id = 3 })
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link " asp-controller="KlasaLiceums" asp-action="AboutMe"><h5>o mnie</h5></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopop="true" aria-expanded="false"><h5>logowanie</h5></a>
                            <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-light bg-dark ">zaloguj się  <i class="bi bi-person-fill"></i></a>
                                <div class="dropdown-divider text-light bg-dark"></div>
                                <a class="dropdown-item text-light bg-dark">załóż konto  <i class="bi bi-person-fill-add"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    

    
        <div class="container-fluid justify-content-center mt-5">
            <main role="main" class="p-3">
                <nav aria-label="breadcrumb">
                    @Html.Partial("_Breadcrumb", ViewData["BreadcrumbNodes"] as List<MvcBreadcrumbNode>)
                </nav>
                @RenderBody()
            </main>
        </div>
    
        
    

    <footer class="footer bg-light  mt-auto fixed-bottom border-top-secondary">
        <div class="container text-center ">
            <p class=" m-2 lead">Copyright &copy 2023 ta strona to gowno</p>
        </div>
    </footer>

    <script>
        function scrollTo{
            var target = $('#AboutMe');
            $('html,body').animate({
                scrollTop: target.offset().top
            }, 1000);
        }
    </script>




    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
