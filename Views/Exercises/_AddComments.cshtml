@model AddCommentVM
    <div class="container py-5">
        <div class="justify-content-center align-items-center">
            <div class="col-md-8">
                
                <h3>Dodaj komentarz <i class="bi bi-send-plus-fill"></i></h3>

                @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
                 {
                    @Html.HiddenFor(m => m.ExerciseId)

                    <div class="form-group dark-border-focus">
                        @Html.TextAreaFor(m => m.Text, new { rows = "4", cols = "50", @class = "form-control text-light border border-light bg-dark btn-outline-dark", placeholder = "Wpisz treść...." })
                        @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-left" type="submit" value="dodaj" />
                    </div>
                 }
            </div>
        </div>
    </div>